{
    "name": "aml-vscode",
    "displayName": "AML support",
    "description": "",
    "publisher": "MuleSoft",
    "version": "0.3.0",
    "engines": {
        "vscode": "^1.43.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/extension",
    "activationEvents": [
        "onLanguage:raml"
    ],
    "contributes": {
        "languages": [
            {
                "id": "raml",
                "aliases": [
                    "ALS",
                    "als"
                ],
                "extensions": [
                    ".raml",
                    ".yaml",
                    ".yml",
                    ".json"
                ],
                "configuration": "./raml-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "raml",
                "scopeName": "source.raml",
                "path": "./syntaxes/raml.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "AML Language Server configurations",
            "properties": {
                "amlLanguageServer.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "verbose",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        },
        "commands": [
            {
                "command": "als.renameFile",
                "title": "ALS Rename file",
                "category": "Modifications",
                "icon": {
                    "light": "path/to/light/icon.svg",
                    "dark": "path/to/dark/icon.svg"
                }
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "resourceLangId == raml",
                    "command": "als.renameFile",
                    "group": "7_modification"
                }
            ]
        }
    },
    "dependencies": {
        "vscode-languageclient": "^6.1.3",
        "upath": "^1.1.2"
    },
    "devDependencies": {
        "@types/node": "^11.13.6",
        "typescript": "^3.9.5",
        "@types/vscode": "1.43.0"
    },
    "scripts": {
        "compile": "tsc",
        "vscode:prepublish": "webpack --mode production",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "test-compile": "tsc -p ./"
    }
}