{
    "name": "aml-vscode",
    "displayName": "AML support",
    "description": "",
    "publisher": "MuleSoft",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.33.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/extension",
    "activationEvents": [
        "onLanguage:raml",
        "onLanguage:oas-json",
        "onLanguage:oas-yaml",
        "onLanguage:async-api",
        "onLanguage:mark-visit"
    ],
    "contributes": {
        "languages": [
            {
                "id": "raml",
                "aliases": [
                    "RAML",
                    "raml"
                ],
                "extensions": [
                    ".raml"
                ],
                "configuration": "./raml-configuration.json"
            },
            {
                "id": "oas-yaml",
                "aliases": [
                    "Open API",
                    "oas"
                ],
                "filenamePatterns": [
                    "api.yaml"
                ],
                "configuration": "./raml-configuration.json"
            },
            {
                "id": "oas-json",
                "aliases": [
                    "Open API",
                    "oas"
                ],
                "filenamePatterns": [
                    "api.json",
                    "*api.json"
                ],
                "configuration": "./raml-configuration.json"
            },
            {
                "id": "async-api",
                "firstLine": "^#%AsyncAPI 0\\.6$",
                "aliases": [
                    "Async API"
                ],
                "extensions": [
                    "api.yaml",
                    "*api.yaml"
                ],
                "configuration": "./raml-configuration.json"
            },
            {
                "id": "mark-visit",
                "aliases": [
                    "Mark Visit"
                ],
                "firstLine": "^#%Mark Visit 1.0$",
                "extensions": [
                    ".yaml"
                ],
                "configuration": "./raml-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "raml",
                "scopeName": "source.raml",
                "path": "./syntaxes/raml.tmLanguage.json"
            },
            {
                "language": "oas-yaml",
                "scopeName": "source.yaml",
                "path": "./syntaxes/yaml.tmLanguage.json"
            },
            {
                "language": "oas-json",
                "scopeName": "source.json",
                "path": "./syntaxes/json.tmLanguage.json"
            },
            {
                "language": "async-api",
                "scopeName": "source.asyncapi",
                "path": "./syntaxes/asyncapi.tmLanguage.json"
            },
            {
                "language": "mark-visit",
                "scopeName": "source.yaml",
                "path": "./syntaxes/yaml.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "AML Language Server configurations",
            "properties": {
                "amlLanguageServer.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "dependencies": {
        "vscode-languageclient": "^5.2.1"
    },
    "devDependencies": {
        "@types/node": "^11.13.6",
        "typescript": "^3.4.4",
        "vscode": "^1.1.33"
    },
    "scripts": {
        "compile": "tsc"
    }
}
